{
    "manifest_version": 3,
    "name": "Mindful Shopper",
    "description": "Pause before you purchase. Choose mindfully.",
    "version": "1.0",
    "permissions": ["storage", "notifications", "alarms"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "default_locale": "en"
  }